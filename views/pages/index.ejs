<% let pageTitle = typeof title !== 'undefined' ? title : 'MIU Clubs & Organizations'; %>
<!-- Carousel Start -->
<div class="container-fluid p-0 pb-5">
    <div class="owl-carousel header-carousel position-relative">
        <div class="owl-carousel-item position-relative" style="max-height: 850px;">
            <video class="video_background" autoplay loop muted playsinline>
                <source src="/img/bg_Video2.mp4" type="video/mp4">
            </video>
            <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" >
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-12 col-lg-8 text-center">
                            <h5 class="text-white text-uppercase mb-3 animated slideInDown">Welcome To</h5>
                            <h1 class="display-3 text-white animated slideInDown mb-4">MIU Clubs</h1>
                            <p class="fs-5 fw-medium text-white mb-4 pb-2">Explore and join our student organizations.</p>
                            <a href="/our-clubs" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Our Clubs</a>
                            <a href="/join-us" class="btn btn-light py-md-3 px-md-5 animated slideInRight quote-btn">Join Us</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Carousel End -->

<!-- About Start -->
<div class="container-fluid bg-light overflow-hidden my-5 px-lg-0">
    <div class="container about px-lg-0">
        <div class="row g-0 mx-lg-0">
          <div class="col-lg-6 ps-lg-0 d-flex align-items-center justify-content-center move-image-down" style="min-height: 400px;">
                <div class="position-relative h-100">
               <img class="img-fluid choose-us" src="/img/pexels-fauxels-3184357.jpg" alt="Managed Security Services" style="max-width: 100%; height: auto;">
</div>
            </div>
            <div class="col-lg-6 about-text py-5 wow fadeIn" data-wow-delay="0.5s">
                <div class="p-lg-5 pe-lg-0">
                    <div class="section-title text-start">
                        <p style="font-size: 25px; color: #d41111;">WHY CHOOSE A CLUB</p>
                        <h6 class="display-6 mb-4">Boost Your Campus Experience With Involvement</h6>
                    </div>
                    <p>Joining a club can help you grow personally, academically, and professionally while connecting with like-minded peers and making the most of your university life.</p>
                    <ul style="font-size: 30px; color: #b51b1b;">
                        <li><p style="color: black; font-size: 20px;">You become part of a passionate community that shares your interests, values, or career goals.</p></li>
                        <li><p style="color: black; font-size: 20px;">You gain leadership experience and hands-on skills that go beyond the classroom.</p></li>
                        <li><p style="color: black; font-size: 20px;">You can expand your network by connecting with students, faculty, alumni, and professionals.</p></li>
                        <li><p style="color: black; font-size: 20px;">You get opportunities to participate in exciting events, workshops, competitions, and volunteer activities.</p></li>
                    </ul>
                    <div class="row g-4 mb-4 pb-2">
                        <div class="col-sm-6 wow fadeIn" data-wow-delay="0.1s">
                            <div class="d-flex align-items-center">
                                <div class="d-flex flex-shrink-0 align-items-center justify-content-center bg-white" style="width: 60px; height: 60px;">
                                    <i class="fa fa-users fa-2x text-primary"></i>
                                </div>
                                <div class="ms-3">
                                    <h2 class="text-primary mb-1" data-toggle="counter-up">10</h2>
                                    <p class="fw-medium mb-0">Active Clubs</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a href="/our-clubs" class="btn btn-primary py-3 px-5">Explore More</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->

<!-- Club Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center">
            <p style="font-size: 20px; color: #e72222; font-family: 'Roboto';">Our Clubs</p>
            <h2 style="color: #b51b1b;">MIU â€” Beyond Academics</h2>
            <h2 style="margin-bottom: 30px;">Sneak a Scroll Through<br>the Club.</h2>
        </div>
        <div class="row g-4">
            <% clubs.forEach(function(club) { %>
                <div class="col-md-6 col-lg-4 wow fadeInUp" data-wow-delay="0.5s">
                    <div class="service-item">
                        <div class="overflow-hidden" style="text-align: center;"></div>
                        <div class="p-4 text-center border border-5 border-light">
                            <img class="img-fluid" src="<%= club.img %>" alt="<%= club.alt %>" style="height: 80px; margin-bottom: 15px;">
                            <h4 class="mb-3"><%= club.name %></h4>
                            <a class="fw-medium" href="<%= club.url %>">Read More<i class="fa fa-arrow-right ms-2"></i></a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>
<!-- Club End --> 