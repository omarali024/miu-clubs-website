<!-- Page Header Start -->
<div class="container-fluid page-header py-5 mb-5">
    <div class="container py-5">
        <h1 class="display-3 text-white mb-3 animated slideInDown"><%= club.name %></h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a class="text-white" href="/">Home</a></li>
                <li class="breadcrumb-item"><a class="text-white" href="/our-clubs">Our Clubs</a></li>
                <li class="breadcrumb-item text-white active" aria-current="page"><%= club.name %></li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

<!-- Club Info Start -->
<div class="container my-5">
    <div class="row align-items-center">
        <div class="col-md-6 text-center">
            <img class="img-fluid mb-4" src="<%= club.img %>" alt="<%= club.alt %>" style="max-width: 350px;">
            <p style="font-size: 18px;"><%- club.description %></p>
            <% if (club.bullets && club.bullets.length) { %>
                <ul style="font-size: 18px; text-align: left; display: inline-block;">
                    <% club.bullets.forEach(function(bullet) { %>
                        <li><%- bullet %></li>
                    <% }); %>
                </ul>
            <% } %>
        </div>
        <div class="col-md-6 text-center">
            <% if (club.video) { %>
                <div class="ratio ratio-16x9">
                    <iframe src="<%= club.video %>" title="<%= club.name %> Video" allowfullscreen></iframe>
                </div>
            <% } %>
        </div>
    </div>
</div>
<div class="container py-5">
    <div class="row g-4">
        <% club.features.forEach(function(feature) { %>
            <div class="col-lg-4 col-md-6">
                <div class="card border-0 shadow">
                    <div class="card-body text-center">
                        <% if (feature.icon) { %>
                            <i class="fa-solid <%= feature.icon %> fa-2x mb-2" style="color: #b51b1b;"></i>
                        <% } %>
                        <h5 class="card-title fw-bold"><%= feature.text %></h5>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<!-- Club Info End --> 